<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRequestStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Scheduled"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"/>

        <TextView
            android:id="@+id/tvRequestDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Pickup on Date at Time (Report ID: XXXXX)"
            android:textSize="14sp"
            android:textColor="#212121"/>

        <TextView
            android:id="@+id/tvRequestAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Address: 123 Main St"
            android:textSize="12sp"
            android:textColor="#757575"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>